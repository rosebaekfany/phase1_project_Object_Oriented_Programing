<AnchorPane prefHeight="540.0" prefWidth="620.0" style="-fx-background-color: #535353 ;" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.yrtwitter.project_phase2.gui.chat.ChatBottom">
    <children>
        <ScrollPane fx:id="scrollPane" hbarPolicy="NEVER" prefHeight="480.0" prefWidth="620.0" vvalue="1.0">
            <content>
                <VBox fx:id="chatContent" alignment="BOTTOM_LEFT" prefHeight="480.0" prefWidth="620.0" style="-fx-background-color: white;" />
            </content>
        </ScrollPane>
        <Pane layoutY="480.0" prefHeight="60.0" prefWidth="620.0" style="-fx-background-color: white;">
            <children>
                <Button fx:id="sendButton" layoutX="570.0" layoutY="11.0" mnemonicParsing="false" onAction="#sendText" prefHeight="39.0" prefWidth="43.0" style="-fx-background-color: white; -fx-border-color: #2499f8; -fx-border-width: 6; -fx-border-radius: 10;" text="send">
                    <font>
                        <Font size="9.0" />
                    </font>
                </Button>
                <TextField fx:id="textField" layoutX="48.0" layoutY="19.0" prefHeight="33.0" prefWidth="515.0" promptText="start messaging..." style="-fx-background-color: #d4d7e3; -fx-border-color: white; -fx-background-radius: 20;" />
                <Button fx:id="attachmentButton" layoutX="14.0" layoutY="16.0" mnemonicParsing="false" onAction="#attach" prefHeight="27.0" prefWidth="27.0" style="-fx-background-color: #535353;" />
                <ImageView fx:id="attachment_icon" fitHeight="27.0" fitWidth="27.0" layoutX="15.0" layoutY="18.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../../../images/attachment.png" />
                    </image>
                </ImageView>
                <Label fx:id="guideLabel" layoutX="70.0" prefHeight="17.0" prefWidth="163.0" text="Label" textFill="#0cb3eb" visible="false">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
            </children>
        </Pane>
    </children>
</AnchorPane>
